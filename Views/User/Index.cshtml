@model string
@{
    ViewData["Title"] = "Login Page";
}

<style>
    .bad{
        display: none;
        color: crimson;
    }
</style>

<h1>Login page</h1>

<form action="@Url.Action("Login", "User")" method="post" onsubmit="return checkInput()">
    <div>
        <hr />
        <div style="margin-bottom:10px">
            <label for="UserName">User name</label>
            <input id="UserName" name="UserName" type="text" />
        </div>
        <div style="margin-bottom:10px">
            <label for="Password">Password</label>
            <input id="Password" name="Password" type="password" />
        </div>
        <div>
            <label for="RememberMe">Remember me</label>
            <input id="RememberMe" name="RememberMe" type="checkbox"/>
        </div>
        <p id="badInput" class="bad">No username or password!</p>
        <div>
            <input type="submit" value="Login" />
        </div>
    </div>
</form>

@if (Model != null)
{
    <p style="color: crimson;">@Model</p>
}

<script>
    function checkInput(){
        let userEl = document.getElementById('UserName');
        let pwdEl = document.getElementById('Password');
        let badInputEl = document.getElementById('badInput');

        if (userEl.value == "") {
            badInputEl.style.display = 'inline-block';
            return false;
        }
        else {
            badInputEl.style.display = '';
        }
        if (pwdEl.value == "") {
            badInputEl.style.display = 'inline-block';
            return false;
        }
        else {
            badInputEl.style.display = '';
        }
    }
</script>